@model Restaurant.Shared.ReservationDTO

@{
    ViewData["Title"] = "Reservation";
}

<h1>Reservation</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GuestNumber" class="control-label"></label>
                <input asp-for="GuestNumber" class="form-control" />
                <span asp-validation-for="GuestNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationDate" class="control-label"></label>
                <input asp-for="ReservationDate" class="form-control" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuTypeId" class="control-label"></label>
                <select asp-for="MenuTypeId" class="form-control">
                    @foreach (var name in Enum.GetNames(typeof(Restaurant.Shared.Enums.MenuTypeEnum)))
                    {
                        <option value="@((int)Enum.Parse(typeof(Restaurant.Shared.Enums.MenuTypeEnum), name))">@name</option>
                    }
                </select>
                <span asp-validation-for="MenuTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
